<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Reused logo from Login Screen, tinted dark for contrast -->
    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Barcode Icon"
        android:scaleType="centerCrop"
        android:src="@drawable/product_default" />

    <!-- Text styling reused from Login Screen -->
    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Product Name"
        android:textColor="@color/text_primary_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/barcodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        tools:text="Barcode: 89009192" />


    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="This is a short description of the product."
        android:textAlignment="center"
        android:textColor="@color/text_secondary_light"
        android:textSize="16sp" />

    <!-- Button style reused from Login Screen -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewAllButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_background_gradient"
        android:text="View Details"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>