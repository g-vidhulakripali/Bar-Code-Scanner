<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gradient"
    android:clipToPadding="false"
    android:padding="16dp"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card 1: Main Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_card_background"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/countryFlagTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="32sp"
                    tools:text="ðŸ‡®ðŸ‡³" />
            </FrameLayout>

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-32dp"
                android:scaleType="centerInside"
                tools:src="@drawable/product_default" />

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_primary_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Pond's Dreamflower Fragrant Talc" />

            <TextView
                android:id="@+id/brandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary_light"
                android:textSize="18sp"
                tools:text="by Pond's" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="â‚¹10.0" />

            <TextView
                android:id="@+id/availabilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp"
                tools:text="Available at: Amazon, Flipkart, Nykaa"
                app:drawableStartCompat="@drawable/ic_search"
                app:drawableTint="@color/text_secondary_light"/>
        </LinearLayout>

        <!-- The <include> tags are now placed directly in the main layout,
             and the reusable card layout will provide its own background and margin. -->
        <include
            android:id="@+id/descriptionCard"
            layout="@layout/layout_expandable_card" />

        <include
            android:id="@+id/healthBenefitsCard"
            layout="@layout/layout_expandable_card" />

        <include
            android:id="@+id/additionalDetailsCard"
            layout="@layout/layout_expandable_card" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:indeterminateTint="@color/text_primary_dark"
            android:visibility="gone"
            tools:visibility="visible" />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/updateButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:background="@drawable/button_background_gradient"-->
<!--            android:text="Update"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:textSize="18sp"-->
<!--            android:textStyle="bold"-->
<!--            android:visibility="gone"-->
<!--            tools:visibility="visible" />-->

    </LinearLayout>
</ScrollView>